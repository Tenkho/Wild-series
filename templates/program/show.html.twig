{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Série</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img src="{{ program.poster }}"></td>
            </tr>
        </tbody>
    </table>
    <strong>Acteur :</strong>
    <ul>
        {% for actor in program.actors %}
            <li>{{ actor.name }} </li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>


    <a href="{{ path('program_index') }}"><button class="btn btn-secondary">Retour à la liste</button></a>

    <a href="{{ path('program_edit', {'id': program.id}) }}"><button class="btn btn-secondary">Editer</button></a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
