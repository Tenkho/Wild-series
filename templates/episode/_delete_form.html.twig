<form method="post" action="{{ path('episode_delete', {'id': episode.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir le supprimer?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ episode.id) }}">
    <button class="btn btn-secondary">Supprimer</button>
</form>
