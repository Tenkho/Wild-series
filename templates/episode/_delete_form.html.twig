<form method="post" action="{{ path('episode_delete', {'slug': episode.slug}) }}" onsubmit="return confirm('Etes-vous sur de vouloir le supprimer?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ episode.slug) }}">
    <button class="btn btn-secondary">Supprimer</button>
</form>
