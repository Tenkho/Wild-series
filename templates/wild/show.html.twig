{% extends 'base.html.twig' %}

{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media block-main">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <a href="{{ path('show_season', {'id' : season.id}) }}">Saison : {{ season.number }}</a>
                <br/>
            {% endfor %}
            <strong>Acteur :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('show_actor', {'slug': actor.slug}) }}">{{ actor.name }} </a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            {% if is_granted("ROLE_ADMIN") %}
                <div>
                    <a href="{{ path('program_edit', { 'slug': program.slug} ) }}" class="btn btn-secondary">Éditer</a>
                </div>
            {%endif%}
            <a href="{{ path('wild_index') }}">
                <button class="btn btn-secondary">Retour à l'accueil</button>
            </a>

        </div>
    </div>

{% endblock %}