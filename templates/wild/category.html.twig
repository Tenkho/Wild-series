
{% extends 'base.html.twig' %}

{% block title %}{{ category.0.name }}{% endblock %}

{% block body %}
    {% for program in programs %}
        <div>
            <h2>{{ program.id }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
{% endblock %}