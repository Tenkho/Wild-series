{% extends 'base.html.twig' %}

{% block title %}Saison{% endblock %}

{% block body %}
    <h1>Saison</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ season.number }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}"><button class="btn btn-secondary">Retour à la liste</button></a>

    <a href="{{ path('season_edit', {'id': season.id}) }}"><button class="btn btn-secondary">Editer</button></a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
